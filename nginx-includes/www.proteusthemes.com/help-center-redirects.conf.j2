# {{ ansible_managed }}

# documentation root goes to help root
location = /docs/ {
  return 301 /help/;
}

# fix the docs to the Dining Restaurant theme
location /docs/dining-restaurant {
  return 301 /docs/restaurant/;
}

# fix the docs to the ConsultPress Lite theme
location = /docs/consultpress-lite/ {
  return 301 /docs/consultpress/;
}

# fix the pagination in the help center
location ~ "^/help/\d{1,2}/" {
  return 301 /help/;
}

# fix the link to opening a new ticket
location = /hc/en-us/requests/new {
  return 301 /help/;
}
